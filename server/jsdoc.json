{
    "source": {
        "include": [
            "index.js",
            "routes",
            "controllers"
        ],
        "includePattern": ".js$",
        "excludePattern": "(nodes_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "template": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "encoding": "utf8",
        "verbose": true,
        "recurse": true,
        "destination": "./docs/",
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark",
            "sections": [
                "Global",
                "Modules",
                "Externals",
                "Interfaces"
            ],
            "add_style_path": [
                "* { font-size: 14px }",
                ".sidebar-section-title { font-size: 1.25rem }"            
            ]
        },
        "markdown": {
            "hardwrap": false,
            "idInHeadings": true
        }
    }
}